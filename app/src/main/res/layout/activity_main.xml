<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/tab_content"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/tab_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/tab_bg_normal"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5.0dp"
        android:paddingTop="5.0dp">

        <RadioButton
            android:id="@+id/tab_rb_1"
            style="@style/tab_rb_style"
            android:checked="true"
            android:drawableTop="@drawable/tab_selector_home"
            android:text="home"
            android:textColor="@color/common_section_key"
            android:textSize="12.0sp" />

        <RadioButton
            android:id="@+id/tab_rb_2"
            style="@style/tab_rb_style"
            android:drawableTop="@drawable/tab_selector_application"
            android:text="app"
            android:textColor="@color/common_section_key"
            android:textSize="12.0sp" />

        <RadioButton
            android:id="@+id/tab_rb_3"
            style="@style/tab_rb_style"
            android:drawableTop="@drawable/tab_selector_file"
            android:text="doc"
            android:textColor="@color/common_section_key"
            android:textSize="12.0sp" />

        <RadioButton
            android:id="@+id/tab_rb_4"
            style="@style/tab_rb_style"
            android:drawableTop="@drawable/tab_selector_wo"
            android:text="more"
            android:textColor="@color/common_section_key"
            android:textSize="12.0sp" />
    </RadioGroup>

    </LinearLayout>
